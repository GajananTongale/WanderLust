<% layout("/layouts/boilerplate") %>
<body>
<div class="container my-5">

    <!-- Listing Card -->
    <div class="card shadow-lg border-0 rounded-4 overflow-hidden mx-auto" style="max-width: 850px;">
        <!-- Image with Price Badge -->
        <div class="position-relative">
            <img src="<%= listing.image.url %>" class="img-fluid w-100" alt="listing_image" style="height: 400px; object-fit: cover;">
            <span class="badge bg-dark position-absolute top-0 start-0 m-3 px-3 py-2 fs-6 shadow">
        â‚¹<%= listing.price.toLocaleString('en-IN') %>
      </span>
        </div>

        <!-- Card Body -->
        <div class="card-body p-4">
            <h3 class="fw-bold mb-3 text-dark"><%= listing.title %></h3>

            <p class="mb-2">
                <strong>Owned By:</strong>
                <span class="fst-italic text-secondary"><%= listing.owner ? listing.owner.username : "Unknown" %></span>
            </p>

            <p class="mb-3"><strong>Description:</strong> <%= listing.description %></p>

            <div class="d-flex flex-wrap gap-4">
                <p class="mb-2"><i class="fas fa-globe-americas text-primary me-2"></i><strong>Country:</strong> <%= listing.country %></p>
                <p class="mb-2"><i class="fas fa-map-marker-alt text-danger me-2"></i><strong>Location:</strong> <%= listing.location %></p>
            </div>
        </div>

        <!-- Owner Actions -->
        <% if(currUser && listing.owner && listing.owner._id && listing.owner._id.equals(currUser._id)) { %>
            <div class="card-footer bg-light d-flex justify-content-end gap-2 px-4 py-3">
                <a href="/listings/<%= listing._id %>/edit" class="btn btn-outline-dark px-4">Edit</a>
                <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
                    <button class="btn btn-danger px-4">Delete</button>
                </form>
            </div>
        <% } %>
    </div>

    <!-- Review Section -->
    <div class="mt-5">
        <hr>
        <% if(currUser){ %>
            <h4 class="mb-3">Leave a Review</h4>
            <!-- Review Form -->
            <form class="mb-4 needs-validation" action="/listings/<%= listing._id %>/reviews" method="post" novalidate>

                <!-- Rating -->
                <div class="mb-3">
                    <label for="rating" class="form-label fw-semibold">Rating</label>
                    <fieldset class="starability-slot">
                        <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="0" checked aria-label="No rating." />
                        <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                        <label for="first-rate1" title="Terrible">1 star</label>
                        <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                        <label for="first-rate2" title="Not good">2 stars</label>
                        <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                        <label for="first-rate3" title="Average">3 stars</label>
                        <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                        <label for="first-rate4" title="Very good">4 stars</label>
                        <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                        <label for="first-rate5" title="Amazing">5 stars</label>
                    </fieldset>
                </div>

                <!-- Comment -->
                <div class="mb-3">
                    <label for="comment" class="form-label fw-semibold">Comments</label>
                    <textarea name="review[comment]" id="comment" rows="4" class="form-control" required></textarea>
                    <div class="invalid-feedback">Please submit a Review</div>
                </div>

                <!-- Button properly aligned -->
                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-outline-dark px-4">Submit</button>
                </div>
            </form>

            <hr>
        <% } %>

        <!-- Reviews List -->
        <p class="fs-4 fw-bold mb-4">Reviews</p>
        <div class="row g-4">
            <% for (let review of listing.reviews) { %>
                <div class="col-md-6 col-lg-4">
                    <div class="card shadow-sm border-0 rounded-3 h-100">
                        <div class="card-body">
                            <!-- Reviewer Info -->
                            <div class="d-flex align-items-center mb-2">
                                <div class="rounded-circle bg-primary text-white d-flex align-items-center justify-content-center me-3"
                                     style="width:40px; height:40px; font-weight:bold;">
                                    <%= review.author ? review.author.username.charAt(0).toUpperCase() : "U" %>
                                </div>
                                <h6 class="card-title mb-0"><%= review.author ? review.author.username : "Anonymous" %></h6>
                            </div>

                            <!-- Comment -->
                            <p class="card-text text-muted mb-2"><%= review.comment %></p>

                            <!-- Rating Stars -->
                            <div class="mb-3">
                                <% for (let i = 1; i <= 5; i++) { %>
                                    <% if (i <= review.rating) { %>
                                        <i class="fas fa-star text-warning"></i>
                                    <% } else { %>
                                        <i class="far fa-star text-warning"></i>
                                    <% } %>
                                <% } %>
                            </div>

                            <!-- Delete Button -->
                            <form method="POST" action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE">
                                <button class="btn btn-sm btn-outline-danger w-100">
                                    <i class="fas fa-trash-alt me-2"></i> Delete Review
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            <% } %>
        </div>
    </div>
</div>
</body>
