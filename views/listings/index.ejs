<% layout("/layouts/boilerplate") %>
<body>
<Style>
    /* Filters section */
    #filters {
        display: flex;
        flex-wrap: wrap;
        align-items: center;
        justify-content: center;
        gap: 1rem;
        margin-top: 1.5rem;
    }
    .filter {
        flex: 0 1 90px;
        text-align: center;
        opacity: 0.7;
        transition: all 0.3s ease;
    }
    .filter p {
        font-size: 0.85rem;
        margin-top: 0.25rem;
    }
    .filter:hover {
        opacity: 1;
        transform: scale(1.1);
        cursor: pointer;
    }
    .tax-toggle {
        border: 1px solid #ccc;
        border-radius: 1rem;
        padding: 0.75rem 1.25rem;
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: #f9f9f9;
        transition: 0.3s;
    }
    .tax-toggle:hover {
        background-color: #f1f1f1;
    }

    /* Listing cards */
    .listing-card {
        margin: 1rem auto;
        border-radius: 1rem;
        overflow: hidden;
        box-shadow: 0 4px 10px rgba(0,0,0,0.1);
        transition: transform 0.2s ease;
    }
    .listing-card:hover {
        transform: translateY(-5px);
    }
    .listing-card img {
        object-fit: cover;
        width: 100%;
        height: 18rem;
    }
    .card-body {
        text-align: center;
    }
    .tax-info {
        display: none;
        font-size: 0.8rem;
        color: #888;
    }

    /* Responsive tweaks */
    @media (max-width: 768px) {
        .listing-card img {
            height: 14rem;
        }
        .filter {
            flex: 0 1 70px;
        }
    }
</Style>

<!-- Filter bar -->
<div id="filters">
    <div class="filter"><i class="fa-solid fa-fire fa-lg"></i><p>Trending</p></div>
    <div class="filter"><i class="fa-solid fa-bed fa-lg"></i><p>Rooms</p></div>
    <div class="filter"><i class="fa-solid fa-mountain-city fa-lg"></i><p>Cities</p></div>
    <div class="filter"><i class="fa-solid fa-mountain fa-lg"></i><p>Mountains</p></div>
    <div class="filter"><i class="fa-solid fa-fort-awesome fa-lg"></i><p>Castles</p></div>
    <div class="filter"><i class="fa-solid fa-person-swimming fa-lg"></i><p>Pools</p></div>
    <div class="filter"><i class="fa-solid fa-campground fa-lg"></i><p>Camping</p></div>
    <div class="filter"><i class="fa-solid fa-cow fa-lg"></i><p>Farms</p></div>
    <div class="filter"><i class="fa-solid fa-snowflake fa-lg"></i><p>Arctic</p></div>
    <div class="filter"><i class="fa-solid fa-igloo fa-lg"></i><p>Domes</p></div>
    <div class="filter"><i class="fa-solid fa-ship fa-lg"></i><p>Boats</p></div>
    <div class="tax-toggle">
        <div class="form-check form-switch">
            <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
            <label class="form-check-label ms-2" for="flexSwitchCheckDefault">Show taxes</label>
        </div>
    </div>
</div>

<!-- Listing grid -->
<div class="container mt-4">
    <div class="row row-cols-1 row-cols-sm-2 row-cols-lg-3 g-4">
        <% for (let listing of allListings){ %>
            <div class="col">
                <a href="/listings/<%= listing._id %>" class="listing-link text-decoration-none text-dark">
                    <div class="card listing-card">
                        <img src="<%= listing.image.url %>" alt="listing image">
                        <div class="card-body">
                            <p class="card-text mb-1">
                                <b><%= listing.title %></b>
                            </p>
                            <p class="mb-0">
                                &#8377;<%= listing.price.toLocaleString('en-IN') %>/night
                                <i class="tax-info"> +18% GST</i>
                            </p>
                        </div>
                    </div>
                </a>
            </div>
        <% } %>
    </div>
</div>

<script>
    let taxSwitch = document.getElementById("flexSwitchCheckDefault");
    taxSwitch.addEventListener("click", function () {
        let taxInfo = document.getElementsByClassName("tax-info");
        for (let info of taxInfo) {
            info.style.display = (info.style.display === "inline") ? "none" : "inline";
        }
    });
</script>
</body>
